generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  status    Genre    @default(Horror)
  address   String?
}

enum Genre {
  Action
  Adventure
  Comedy
  Drama
  Fantasy
  Horror
  Mystery
}

model Book {
  id          String   @id @default(uuid()) 
  title       String
  price       String
  description String
  image       String?
  author      String
  genre       Genre    @default(Horror)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Author {
  id          String   @id @default(uuid())
  name        String
  dob         DateTime
  address     String
  description String
}
