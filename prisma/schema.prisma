generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//create a model for the user
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  status    Genre    @default(Horror)
  address   String?
}

enum Genre {
  Action
  Adventure
  Comedy
  Drama
  Fantasy
  Horror
  Mystery
}
